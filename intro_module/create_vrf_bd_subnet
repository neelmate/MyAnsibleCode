---
- name: ENSURE APPLICATION CONFIGURATION EXISTS
  hosts: apic
  connection: local
  gather_facts: False
  vars_prompt:
    - name: "tenant"
      prompt: "What would you like to name your Tenant?"
      private: no

  tasks:
    - name: ENSURE TENANT BRIDGE DOMAIN EXISTS
      aci_bd:
        host: "{{ ansible_host }}"
        username: "{{ username }}"
        password: "{{ password }}"
        state: "present"
        validate_certs: False
        tenant: "PROD_TN"
        bd: "B2CC_ENTARCH_APP_BD"
        vrf: "OPC_VRF"
        description: "BD Created Using Ansible"

    - name: ENSURE BRIDGE DOMAIN SUBNET B2CC_ENTARCH_APP_BD EXISTS
      aci_bd_subnet:
        host: "{{ ansible_host }}"
        username: "{{ username }}"
        password: "{{ password }}"
        state: "present"
        validate_certs: False
        tenant: "PROD_TN"
        bd: "B2CC_ENTARCH_APP_BD"
        gateway: "10.51.68.254"
        mask: 24
        description: "Subnet Created Using Ansible"

    - name: ENSURE BRIDGE DOMAIN SUBNET B2CC_ENTARCH_NFS_BD EXISTS
      aci_bd_subnet:
        host: "{{ ansible_host }}"
        username: "{{ username }}"
        password: "{{ password }}"
        state: "present"
        validate_certs: False
        tenant: "PROD_TN"
        bd: "B2CC_ENTARCH_APP_BD"
        gateway: "10.51.168.254"
        mask: 24
        description: "Subnet Created Using Ansible"
        
